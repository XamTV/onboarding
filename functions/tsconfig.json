{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["node_modules"]
}
